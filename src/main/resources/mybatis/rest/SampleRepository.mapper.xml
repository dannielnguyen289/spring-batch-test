<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.stringeex.rest.sample.SampleRestRepository">

    <select id="count"
            parameterType="com.stringeex.rest.sample.query.SelectEntityPrt"
            resultType="java.lang.Long">
        SELECT COUNT(1)
        FROM SAM_ENTITY
    </select>

    <select id="list"
            parameterType="com.stringeex.rest.sample.query.SelectEntityPrt"
            resultType="com.stringeex.rest.sample.query.SelectEntityRss">
        SELECT
            ID              AS ID,
            NAME            AS NAME,
            DESCRIPTION     AS DESCRIPTION
        FROM SAM_ENTITY
        <if test="offset != null and limit != null">
            LIMIT #{offset}, #{limit}
        </if>
    </select>

</mapper>